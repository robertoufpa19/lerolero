<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLeroLero"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_degrade_login_cadastro"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activity.SplashActivity">


    <ImageView
        android:id="@+id/textLeroLero"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="290dp"
        android:layout_marginEnd="33dp"
        android:src="@drawable/icone_lero_lero"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ProgressBar
        android:id="@+id/progressBarFeed"
        style="?android:attr/progressBarStyle"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintBottom_toBottomOf="@+id/textLeroLero"
        app:layout_constraintEnd_toEndOf="@+id/textLeroLero"
        app:layout_constraintStart_toStartOf="@+id/textLeroLero"
        app:layout_constraintTop_toTopOf="@+id/textLeroLero" />
    " />

</androidx.constraintlayout.widget.ConstraintLayout>